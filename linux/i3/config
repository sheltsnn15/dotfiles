#workspace $ws3 output HDMI-0
#workspace $ws4 output HDMI-0
#workspace $ws5 output HDMI-0

# bind program to workspace and focus to them on startup:
assign [class="(?i)rambox"] $ws1
assign [class="(?i)thunderbird"] $ws2
assign [class="(?i)libreoffice(?i)"] $ws3
assign [class="(?i)firefox"] $ws5
assign [class="(?i)jetbrains-idea"] $ws6
assign [class="(?i)bitwarden"] $ws7

# automatic set focus new window if it opens on another workspace than the current:
for_window [class=(?i)rambox] focus
for_window [class=(?i)libreoffice(?i)] focus
for_window [class=(?i)firefox] focus
for_window [class=(?i)bitwarden] focus
for_window [class=(?i)thunderbird] focus

